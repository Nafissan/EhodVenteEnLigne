@model EhodBoutiqueEnLigne.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = Localizer["CreatProductTitle"];
    Layout = "_AdminLayout";
}

<form asp-action="Create" method="post">
    <div class="mb-3 col-6">
        <span asp-validation-for="Name" class="text-danger"></span>
        <label>@Localizer["Name"]*:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3 col-4">
        <span asp-validation-for="Price" class="text-danger"></span>
        <label>@Localizer["Price"]*:</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="mb-3 col-8">
        <span asp-validation-for="Description" class="text-danger"></span>
        <label>@Localizer["Description"]:</label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="mb-3 col-4">
        <span asp-validation-for="Stock" class="text-danger"></span>
        <label>@Localizer["Stock"]*:</label>
        <input asp-for="Stock" type="text" class="form-control" />
    </div>
    <div class="mb-3 col-8">
        <span asp-validation-for="Details" class="text-danger"></span>
        <label>@Localizer["Details"]:</label>
        <input asp-for="Details" class="form-control" />
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="@Localizer["OK"]" />
    </div>
</form>
